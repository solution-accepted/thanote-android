<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="ActionBarTheme">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Font -->
    <!-- Define Custom Font here -->
    <style name="HomeTitleStyle">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleStyleCollectionsNotes">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkGrayContentStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BlackContentStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BlackMessageStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

</resources>
