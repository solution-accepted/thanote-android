<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".scenes.test.sqlite.category.CategoryTableTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/edit_text_insert_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="name..." />

        <Button
            android:id="@+id/button_update_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButton"
            android:layout_marginStart="16dp"
            android:text="Insert" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/edit_text_update_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="id..." />

        <EditText
            android:id="@+id/edit_text_update_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="name..." />

        <Button
            android:id="@+id/button_insert_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButton"
            android:layout_marginStart="16dp"
            android:text="Update" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/edit_text_delete_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="id..." />

        <Button
            android:id="@+id/button_delete_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButton"
            android:layout_marginStart="16dp"
            android:text="Delete" />

        <EditText
            android:id="@+id/edit_text_query_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="id..." />

        <Button
            android:id="@+id/button_query_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButton"
            android:layout_marginStart="16dp"
            android:text="Query Id" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/edit_text_query_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="name..." />

        <Button
            android:id="@+id/button_query_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButton"
            android:layout_marginStart="16dp"
            android:text="Query name" />

    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            style="@style/TitleStyle" />

        <Button
            android:id="@+id/button_query_category_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButton"
            android:layout_marginStart="100dp"
            android:text="QueryAll" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_category_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some results here..."
        style="@style/DarkGrayContentStyle"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

</LinearLayout>