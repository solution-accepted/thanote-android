<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_blue_bright">

    <TextView
        android:id="@+id/text_view_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collection_fragment_title"
        android:layout_centerInParent="true"
        style="@style/TitleFont" />

    <Button
        android:id="@+id/button_collection_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collection_fragment_note_detail"
        android:layout_centerInParent="true"
        style="@style/DemoButtonFont"
        android:layout_below="@+id/text_view_collection" />

</RelativeLayout>