<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/image_view_api"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_joke" />

    <TextView
        android:id="@+id/text_view_api_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_api"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_view_api"
        android:text="Joke"
        android:layout_marginStart="4sp"
        style="@style/BlackMessageStyle"
        android:gravity="center" />

</RelativeLayout>